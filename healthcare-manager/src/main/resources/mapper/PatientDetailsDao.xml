<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.budailad.dao.PatientDetailsDao">

    <resultMap type="com.budailad.entity.PatientDetails" id="PatientDetailsMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="PatientDetailsMap">
        select id
        from patient_details
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="PatientDetailsMap">
        select
        id
        from patient_details
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from patient_details
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into patient_details()
        values ()
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into patient_details()
        values
        <foreach collection="entities" item="entity" separator=",">
            ()
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into patient_details()
        values
        <foreach collection="entities" item="entity" separator=",">
            ()
        </foreach>
        on duplicate key update

    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update patient_details
        <set>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from patient_details
        where id = #{id}
    </delete>

</mapper>

