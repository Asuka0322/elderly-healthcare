<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.budailad.dao.IllnessCatalogDao">

    <resultMap type="com.budailad.entity.IllnessCatalog" id="IllnessCatalogMap">
        <result property="illId" column="ill_id" jdbcType="VARCHAR"/>
        <result property="illType" column="ill_type" jdbcType="VARCHAR"/>
        <result property="illName" column="ill_name" jdbcType="VARCHAR"/>
        <result property="comment" column="comment" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="IllnessCatalogMap">
        select ill_id,
               ill_type,
               ill_name,
               comment
        from illness_catalog
        where ill_id = #{illId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="IllnessCatalogMap">
        select
        ill_id, ill_type, ill_name, comment
        from illness_catalog
        <where>
            <if test="illId != null and illId != ''">
                and ill_id = #{illId}
            </if>
            <if test="illType != null and illType != ''">
                and ill_type = #{illType}
            </if>
            <if test="illName != null and illName != ''">
                and ill_name = #{illName}
            </if>
            <if test="comment != null and comment != ''">
                and comment = #{comment}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from illness_catalog
        <where>
            <if test="illId != null and illId != ''">
                and ill_id = #{illId}
            </if>
            <if test="illType != null and illType != ''">
                and ill_type = #{illType}
            </if>
            <if test="illName != null and illName != ''">
                and ill_name = #{illName}
            </if>
            <if test="comment != null and comment != ''">
                and comment = #{comment}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="illId" useGeneratedKeys="true">
        insert into illness_catalog(ill_type, ill_name, comment)
        values (#{illType}, #{illName}, #{comment})
    </insert>

    <insert id="insertBatch" keyProperty="illId" useGeneratedKeys="true">
        insert into illness_catalog(ill_type, ill_name, comment)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.illType}, #{entity.illName}, #{entity.comment})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="illId" useGeneratedKeys="true">
        insert into illness_catalog(ill_type, ill_name, comment)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.illType}, #{entity.illName}, #{entity.comment})
        </foreach>
        on duplicate key update
        ill_type = values(ill_type),
        ill_name = values(ill_name),
        comment = values(comment)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update illness_catalog
        <set>
            <if test="illType != null and illType != ''">
                ill_type = #{illType},
            </if>
            <if test="illName != null and illName != ''">
                ill_name = #{illName},
            </if>
            <if test="comment != null and comment != ''">
                comment = #{comment},
            </if>
        </set>
        where ill_id = #{illId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from illness_catalog
        where ill_id = #{illId}
    </delete>

</mapper>

